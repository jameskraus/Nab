{
  "name": "nab",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "bin": {
    "nab": "src/cli/index.ts"
  },
  "scripts": {
    "nab": "bun src/cli/index.ts",
    "dev": "bun --hot src/cli/index.ts",
    "start": "bun src/cli/index.ts",
    "build": "bun build --compile --outfile=dist/nab src/cli/index.ts",
    "lint": "biome check .",
    "format": "biome format . --write",
    "check": "bun run lint && bun run typecheck && bun test",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "prepare": "husky"
  },
  "dependencies": {
    "picocolors": "^1.0.1",
    "yargs": "^17.7.2",
    "ynab": "^2.10.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "latest",
    "@types/yargs": "^17.0.35",
    "husky": "^9.1.7",
    "typescript": "^5.9.3"
  }
}
